<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00FF00"
        android:drawSelectorOnTop="false"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

    <TextView android:text="@string/broker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_broker"
        android:layout_alignBaseline="@+id/et_broker"
        android:layout_alignBottom="@+id/et_broker"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_broker"
        android:hint="@string/broker_hint"
        android:layout_marginTop="21dp"
        android:layout_below="@android:id/list"
        android:layout_alignEnd="@android:id/list" />

    <TextView android:text="@string/port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_port"
        android:layout_alignBaseline="@+id/et_port"
        android:layout_alignBottom="@+id/et_port"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_port"
        android:hint="@string/port_hint"
        android:layout_below="@+id/et_broker"
        android:layout_alignStart="@+id/et_broker" />

    <Button android:text="@string/connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_connect"
        android:textStyle="bold"
        android:layout_below="@+id/et_port"
        android:layout_alignParentStart="true" />


</RelativeLayout>
